// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum MessageStatus {
  read
  unread
  delivered
}

enum MessageType {
  text
  reaction
  video
  image
  audio
  location
  contacts
  interactive
  template
}

enum MessageDirection {
  incoming
  outgoing
}

enum WhatsappStatus {
  initial
  onMainMenu
  selectingState
  attended
  blocked
}

model WhatsappMessage {
  id         String           @id
  customer   Customer         @relation(fields: [customerId], references: [id])
  message    String           @db.VarChar(4096)
  to         String // Whatsapp account id receiving the message
  status     MessageStatus
  direction  MessageDirection
  type       MessageType
  mediaId    String           @default("")
  timestamp  DateTime         @default(now())
  customerId Int
  attendant  Int
}

model Customer {
  id              Int               @id @default(autoincrement())
  name            String? // Customer name
  phone           String?           @unique // Customer phone Number
  email           String?           @unique // Customer email
  identification  String?           @unique // Customer identification
  attending       Int // id of the attending user 0 = bot
  lastActive      DateTime
  wppStatus       WhatsappStatus
  WhatsappMessage WhatsappMessage[]
  detail          String            @default("")
}

enum NotificationType {
  success
  error
  info
  warning
}

model Notification {
  id        Int              @id @default(autoincrement())
  userId    Int
  title     String
  body      String           @db.VarChar(4200)
  type      NotificationType
  timestamp DateTime         @default(now())
}
